@page "/colours/create/"
@inject NavigationManager _navigationManager
@inject HttpClient _client

<h3 class="card-title">Create New Color</h3>
<hr />
<br />

<FormComponent color="color" OnValidSubmit="@OnValidSubmit" ButtonText="Create"/>
<BackToList Target="colours"/>
@code {

    Colour color = new Colour();

    private async Task OnValidSubmit()
    {
        await _client.PostAsJsonAsync(Endpoints.ColoursEndpoint, color);
        _navigationManager.NavigateTo("/colours/");
    }

}