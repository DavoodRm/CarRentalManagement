@page "/models/create/"
@using CarRentalManagement.Client.Contracts
@inject NavigationManager _navigationManager
@inject HttpClient _client
@inject IHttpRepository<Model> _model
@inject IHttpRepository<Make> _make
@*@inherits OwningComponentBase<IHttpRepository<Model>> *@

<h3 class="card-title">Create New Model</h3>
<hr />
<br />

<FormComponent OnValidSubmit="@OnValidSubmit" ButtonText="Create" model="@model"></FormComponent>

@code {

    Model model = new Model();

    private async Task OnValidSubmit()
    {
        await _model.Create(Endpoints.ModelsEndpoint, model);
    // await _client.PostAsJsonAsync(Endpoints.ModelsEndpoint, model);
        _navigationManager.NavigateTo("/models/");
    }

}